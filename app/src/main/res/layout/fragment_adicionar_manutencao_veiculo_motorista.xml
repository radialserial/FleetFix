<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.motorista.AdicionarManutencaoVeiculoMotoristaFragment">

    <!-- Campo de texto para descrição do problema -->
    <EditText
        android:id="@+id/etProblemDescription"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:hint="Descreva o problema..."
        android:gravity="top|start"
        android:padding="16dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Botão para submeter o formulário -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submeter"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/etProblemDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>