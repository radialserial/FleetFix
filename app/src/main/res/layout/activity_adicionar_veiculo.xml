<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF4FF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdicionar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F4EFFA"
        android:title="Adicionar veículo"
        android:titleTextColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Placa -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPlaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAdicionar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="#EDE7F6">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Placa" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Ano de Fabricação -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputAnoFabricacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="#EDE7F6">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ano fab." />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Valor IPVA -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputValorIpva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputAnoFabricacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="#EDE7F6">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor IPVA" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botão Adicionar -->
    <Button
        android:id="@+id/btnAdicionarVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#6A457F"
        android:text="Adicionar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/inputValorIpva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
